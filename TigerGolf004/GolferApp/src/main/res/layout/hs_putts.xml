<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/puttsMain"
    android:layout_margin="@dimen/mon_margin"
    app:cardElevation="@dimen/mon_divider">

    <RelativeLayout
        android:layout_margin="@dimen/mon_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon1"
                android:src="@drawable/golfball48"
                android:layout_width="24dp"
                android:layout_height="24dp" />
            <TextView
                android:id="@+id/mistakeLabel"
                style="@style/Title2TextStyleGrey"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/icon1"
                android:layout_marginLeft="@dimen/mon_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Putts and Score" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/puttLayout"
            android:layout_below="@id/titleLayout"
            android:layout_margin="@dimen/mon_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/puttLength"
                style="@style/Title2TextStyleBlack"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/puttLabel"
                android:text="Length of First Putt"
                style="@style/TextStyle"
                android:layout_toLeftOf="@id/puttLength"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mon_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/numberPuttsLayout"
            android:layout_below="@id/puttLayout"
            android:layout_margin="@dimen/mon_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/putts"
                style="@style/Title2TextStyleBlue"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/puttsLabel"
                android:text="Number of Putts"
                style="@style/TextStyle"
                android:layout_toLeftOf="@id/putts"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mon_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/scoreLayout"
            android:layout_below="@id/numberPuttsLayout"
            android:layout_margin="@dimen/mon_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/score"
                android:text="0"
                style="@style/Title1TextStyleBlack"
                android:textSize="40sp"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/scoreLabel"
                android:text="Score"
                style="@style/TextStyleBold"
                android:layout_toLeftOf="@id/score"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/mon_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>