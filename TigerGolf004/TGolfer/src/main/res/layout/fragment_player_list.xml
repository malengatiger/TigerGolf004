<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.boha.golfpractice.golfer.app.fragments.PlayerListFragment">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_margin="@dimen/mon_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/count"
        style="@style/Title1TextStyleRed"
        android:textSize="48sp"
        android:elevation="@dimen/mon_padding"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/mon_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00" />

    <LinearLayout
        android:id="@+id/handle"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:src="@drawable/ic_add_white_24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/mon_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
