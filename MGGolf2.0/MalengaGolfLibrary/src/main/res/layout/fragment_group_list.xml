<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/grey"
                android:padding="10dp"
                android:layout_height="match_parent">

    <RelativeLayout
            android:id="@+id/GROUP_topLayout"
            android:background="@color/white"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                style="@style/Title2TextStyleBlack"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/GROUP_txtTitle"
                android:text="@string/groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                style="@style/Title3TextStyleBlue"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/GROUP_txtSub"
                android:layout_below="@id/GROUP_txtTitle"
                android:text="@string/select_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            </RelativeLayout>
    <ListView
            android:id="@+id/GROUP_list"
            android:layout_below="@id/GROUP_topLayout"
            android:layout_marginTop="10dp" android:dividerHeight="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</RelativeLayout>