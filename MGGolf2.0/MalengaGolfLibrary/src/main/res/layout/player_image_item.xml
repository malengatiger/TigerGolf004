<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

    <com.boha.malengagolf.library.gallery.STGVImageView
            android:id="@+id/img_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ddd"
            android:scaleType="centerCrop"/>

    <TextView
            android:id="@+id/tv_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:textSize="12sp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/img_content"
            />

    <RelativeLayout
            android:layout_below="@id/tv_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_lastHoleLabel"
                style="@style/TextStyleGrey"
                android:text="@string/last_hole_short"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"/>

        <TextView
                android:id="@+id/tv_lastHole"
                android:layout_width="wrap_content" android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_lastHoleLabel"
                android:text="@string/zero"
                android:textStyle="bold"
                android:textSize="12sp"/>

        <TextView
                android:id="@+id/tv_parLabel"
                style="@style/TextStyleGrey" android:layout_marginLeft="20dp"
                android:text="@string/par"
                android:layout_toRightOf="@id/tv_lastHole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/tv_par"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/tv_parLabel"
                android:text="@string/zero"
                android:textStyle="bold"
                android:textSize="12sp"/>
    </RelativeLayout>


</RelativeLayout>