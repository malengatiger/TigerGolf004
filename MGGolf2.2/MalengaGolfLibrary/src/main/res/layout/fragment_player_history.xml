<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/grey"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/PH_FRAG_layoutTop"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/PH_FRAG_playerName"
            android:text="@string/txt"
            style="@style/Title2TextStyleBlack"
            android:textStyle="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/PH_FRAG_image"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            android:layout_below="@id/PH_FRAG_playerName"
            android:layout_height="120dp" />


        <RelativeLayout
            android:id="@+id/PH_FRAG_layoutCount"
            android:layout_width="match_parent"
            android:layout_below="@id/PH_FRAG_playerName"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/PH_FRAG_count"
                android:text="@string/zero"
                style="@style/RedCircle"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/PH_FRAG_countLabel"
                android:text="@string/number_tourn"
                style="@style/TextStyleGrey"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_toLeftOf="@id/PH_FRAG_count"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/PH_FRAG_list"
        android:layout_below="@id/PH_FRAG_layoutTop"
        android:layout_marginTop="10dp"
        android:dividerHeight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>