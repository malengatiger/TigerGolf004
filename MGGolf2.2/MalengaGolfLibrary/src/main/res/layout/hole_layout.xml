<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/SBH_layoutHole1"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:background="@color/beige_pale"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/SBH_txtLabel1"
                style="@style/TextStyleGrey"
                android:text="@string/hole1"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/SBH_txtScore1"
                style="@style/Title1TextStyleBlue"
                android:text="@string/zero"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/SBH_txtLabel1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/SBH_btnUp1"
                style="@style/ButtonCancelSmall"
                android:layout_centerVertical="true"
                android:layout_marginLeft="65dp"
                android:layout_toRightOf="@id/SBH_txtScore1"
                android:drawableLeft="@drawable/arrow_circle_up32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/SBH_btnDown1"
                style="@style/ButtonCancelSmall"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/SBH_btnUp1"
                android:drawableLeft="@drawable/arrow_circle_down32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/SBH_layoutPoints1"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/SBH_layoutHole1"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:background="@color/beige_pale"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/SBH_txtLabel1a"
                style="@style/TextStyleGrey"
                android:text="@string/points"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/SBH_txtPoints1"
                style="@style/Title2TextStyleBlack"
                android:text="@string/zero"
                android:layout_marginLeft="30dp"
                android:textStyle="bold"
                android:layout_toRightOf="@id/SBH_txtLabel1a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/SBH_btnPointsUp1"
                style="@style/ButtonCancelSmall"
                android:layout_centerVertical="true"
                android:layout_marginLeft="70dp"
                android:layout_toRightOf="@id/SBH_txtPoints1"
                android:drawableLeft="@drawable/arrow_circle_up32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/SBH_btnPointsDown1"
                style="@style/ButtonCancelSmall"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/SBH_btnPointsUp1"
                android:drawableLeft="@drawable/arrow_circle_down32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>


</RelativeLayout>