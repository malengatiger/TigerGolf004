<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:background="@color/grey"
                android:layout_height="match_parent">

    <RelativeLayout android:id="@+id/TAB_top"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/TAB_tourneyName"
                style="@style/Title3TextStyleBlue"
                android:text="@string/txt"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:src="@drawable/cancel_32"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

        <TextView
                android:id="@+id/TAB_clubName"
                style="@style/Title3TextStyleBlack"
                android:textSize="14sp"
                android:text="@string/txt"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/TAB_tourneyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/TAB_date"
                android:text="30 December 2091"
                android:layout_below="@id/TAB_clubName"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"/>
        <RelativeLayout
                android:id="@+id/TAB_roundLayout"

                android:layout_below="@id/TAB_date"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/TAB_round"
                    style="@style/Title3TextStyleBlue"
                    android:text="@string/round1"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/TAB_txtSort"
                    style="@style/ButtonCancelSmall"
                    android:text="@string/sort"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


        </RelativeLayout>



    </RelativeLayout>

    <ScrollView
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:layout_below="@id/TAB_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TableLayout
                android:id="@+id/TAB_table"
                android:layout_marginTop="10dp"
                android:layout_below="@id/TAB_round"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent">

        </TableLayout>
    </ScrollView>
</RelativeLayout>