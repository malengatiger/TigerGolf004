<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/mon_divider"
    android:layout_margin="@dimen/mon_margin"
    tools:cardCornerRadius="@dimen/mon_divider"
    tools:cardElevation="@dimen/mon_padding">

    <RelativeLayout
        android:layout_margin="@dimen/mon_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/TNPL_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/mon_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/boy" />

        <TextView
            android:id="@+id/TNPL_number"
            style="@style/GreenCircleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginTop="0dp"
            android:text="@string/zero" />

        <TextView
            android:id="@+id/TNPL_txtName"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/TNPL_image"
            android:text="@string/txt"
            android:textSize="18sp" />



        <RelativeLayout
            android:id="@+id/TNPL_layoutRound1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/TNPL_txtName"
            android:layout_below="@+id/TNPL_txtName"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/TNPL_txtLabel1"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/round1" />

            <TextView
                android:id="@+id/TNPL_txtLabel1a"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/TNPL_txtLabel1"
                android:text="@string/tee"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TNPL_txtTee1"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/TNPL_txtLabel1a"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/TNPL_txtLabel1a"
                android:text="@string/zero"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TNPL_txtPar1"
                style="@style/Title1TextStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:layout_marginRight="10dp"
                android:text="@string/zero" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TNPL_layoutRound2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/TNPL_layoutRound1"
            android:layout_below="@+id/TNPL_layoutRound1"
            android:visibility="visible">

            <TextView
                android:id="@+id/TNPL_txtLabel2"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/round2" />

            <TextView
                android:id="@+id/TNPL_txtLabel2a"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/TNPL_txtLabel2"
                android:text="@string/tee"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TNPL_txtTee2"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/TNPL_txtLabel2a"
                android:text="@string/zero"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TNPL_txtPar2"
                style="@style/Title1TextStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/zero" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TNPL_layoutRound3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/TNPL_layoutRound2"
            android:layout_below="@+id/TNPL_layoutRound2"
            android:visibility="visible">

            <TextView
                android:id="@+id/TNPL_txtLabel3"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/round3" />

            <TextView
                android:id="@+id/TNPL_txtLabel3a"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/TNPL_txtLabel3"
                android:text="@string/tee"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TNPL_txtTee3"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/TNPL_txtLabel3a"
                android:text="@string/zero"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TNPL_txtPar3"
                style="@style/Title1TextStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/zero" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TNPL_layoutRound4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/TNPL_layoutRound3"
            android:layout_below="@+id/TNPL_layoutRound3"
            android:visibility="visible">

            <TextView
                android:id="@+id/TNPL_txtLabel4"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/round4" />

            <TextView
                android:id="@+id/TNPL_txtLabel4a"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/TNPL_txtLabel4"
                android:text="@string/tee"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TNPL_txtTee4"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/TNPL_txtLabel4a"
                android:text="@string/zero"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TNPL_txtPar4"
                style="@style/Title1TextStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/zero" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TNPL_layoutRound5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/TNPL_layoutRound4"
            android:layout_below="@+id/TNPL_layoutRound4"
            android:visibility="visible">

            <TextView
                android:id="@+id/TNPL_txtLabel5"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/round5" />

            <TextView
                android:id="@+id/TNPL_txtLabel5a"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/TNPL_txtLabel5"
                android:text="@string/tee"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TNPL_txtTee5"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/TNPL_txtLabel5a"
                android:text="@string/zero"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TNPL_txtPar5"
                style="@style/Title1TextStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/zero" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TNPL_layoutRound6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/TNPL_layoutRound5"
            android:layout_below="@+id/TNPL_layoutRound5"
            android:visibility="visible">

            <TextView
                android:id="@+id/TNPL_txtLabel6"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/round6" />

            <TextView
                android:id="@+id/TNPL_txtLabel6a"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/TNPL_txtLabel6"
                android:text="@string/tee"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TNPL_txtTee6"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/TNPL_txtLabel6a"
                android:text="@string/zero"
                android:visibility="gone" />

            <TextView
                android:id="@+id/TNPL_txtPar6"
                style="@style/Title1TextStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/zero" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/TNPL_layoutTotalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/TNPL_layoutRound6"
            android:layout_below="@+id/TNPL_layoutRound6"
            android:visibility="visible">

            <View
                android:id="@+id/TNPL_space"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/beige_pale" />

            <TextView
                android:id="@+id/TNPL_txtLabel7"
                style="@style/TextStyleGrey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/TNPL_space"
                android:text="@string/total_score"
                android:textSize="18sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/TNPL_txtPar7"
                style="@style/Title1TextStyleBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/TNPL_txtLabel7"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="@string/zero"
                android:textColor="@color/green" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/TNPL_layoutActions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/TNPL_layoutTotalScore"
            android:layout_below="@+id/TNPL_layoutTotalScore"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:visibility="visible">
            <ImageView
                android:id="@+id/TNPL_imgRemovePlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_delete" />


            <ImageView
                android:id="@+id/TNPL_imgScoring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_edit" />
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
